configuration {
    show-icons:                     true;
    display-drun: 					"ï€‚";
    drun-display-format:            "{name}";
    disable-history:                false;
	sidebar-mode: 					false;
    font:							"SF Pro Display 10";
    kb-row-down:                    "Alt+Tab,j,l";
    kb-row-up:                      "Alt+ISO_Left_Tab,k,h";
    kb-accept-entry:                "!Alt-Tab,!Alt-Alt_L,!Alt_L,Return";
}

@import "colors.rasi"

window {
    transparency:                   "real";
    background-color:               @bg;
    text-color:                     @fg;
	border:							2px;
	border-color:					@bd;
    border-radius:                  12px;
	width:							35%;
    location:                       center;
    x-offset:                       0;
    y-offset:                       0;
}

listview {
    background-color:               @al;
    padding:                        10px;
    columns:                        6;
    lines:                          6;
    spacing:                        0%;
    cycle:                          true;
    dynamic:                        true;
    layout:                         horizontal;
}

apptitlebar {
	children: 						[  ];
    background-color:               @ac;
    text-color:                     @bg;
    expand:                         false;
	border:							0% 0% 0% 0%;
    border-radius:                  0px;
	border-color:					@ac;
    margin:                         0% 0% 0% 0%;
    padding:                        1.5%;
}

mainbox {
    background-color:               @al;
	border:							0% 0% 0% 0%;
    border-radius:                  0% 0% 0% 0%;
	border-color:					@ac;
    children:                       [ listview, apptitlebar ];
    spacing:                       	0%;
    padding:                        0%;
}

element {
    background-color:               @al;
    text-color:                     @fg;
    orientation:                    horizontal;
    border-radius:                  0%;
    padding:                        2% 1% 2% 1%;
    children:                       [ element-icon ];
}

element-icon {
    background-color: 				inherit;
    text-color:       				inherit;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    size:                           64px;
    border:                         0px;
}

element-text selected {
    background-color: 				@al;
    text-color:       				inherit;
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;
}

element selected {
    background-color:               @se;
    text-color:                     @fg;
	border:							0% 0% 0% 0%;
    border-radius:                  12px;
    border-color:                  	@bg;
}
